<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.hualuomoli.extend.sms.mapper.SmsMapper">

  <update id="invalid">
      update `sys_sms`
      set state = #{state},
      state_name = #{stateName}
      where phone = #{phone}
      and type = #{type}
  </update>
  
  <update id="checked">
      update `sys_sms`
      set state = #{state},
      state_name = #{stateName}
      <where>
	      <foreach collection="ids" item="id" separator="and">
	      	id = #{id}
	      </foreach>
      </where>
  </update>
  
</mapper>